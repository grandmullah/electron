{
  "name": "Betzone",
  "version": "1.0.16",
  "description": "Betzone desktop app",
  "main": "dist/main/index.js",
  "author": "grandmullah",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.main.json && vite build && shx mkdir -p dist/renderer && shx cp -r renderer/*.html dist/renderer/ && shx cp -r renderer/styles dist/renderer/ && shx cp -r renderer/src/styles dist/renderer/src-styles && shx cp -r renderer/public dist/renderer/ && shx cp -r resources dist/",
    "build:windows": "tsc -p tsconfig.main.json && vite build && shx mkdir -p dist/renderer && shx cp -r renderer/*.html dist/renderer/ && shx cp -r renderer/styles dist/renderer/ && shx cp -r renderer/public dist/renderer/ && shx cp -r resources dist/ && node fix-windows-renderer.js",
    "postbuild": "node fix-windows-renderer.js",
    "start": "yarn build && electron .",
    "dev": "concurrently -k -c auto \"vite build --watch\" \"tsc -p tsconfig.main.json --watch\" \"electron . --max-old-space-size=4096 --max-tile-memory=512\"",
    "watch": "tsc -p tsconfig.main.json --watch",
    "package": "electron-forge package",
    "premake": "yarn build",
    "make": "electron-forge make",
    "make:win": "yarn build:windows && electron-forge make --platform win32",
    "make:win:installer": "yarn build && electron-forge make --platform win32 --arch x64 --targets @electron-forge/maker-squirrel",
    "make:win:portable": "yarn build && electron-forge make --platform win32 --arch x64 --targets @electron-forge/maker-zip",
    "build:win": "yarn build && electron-forge make --platform win32 --arch x64 --targets @electron-forge/maker-zip",
    "build:win:portable": "yarn build && electron-forge make --platform win32 --arch x64 --targets @electron-forge/maker-zip",
    "build:win:installer": "yarn build && electron-forge make --platform win32 --arch x64 --targets @electron-forge/maker-squirrel",
    "eb:dir": "yarn build && electron-builder --dir",
    "eb:win": "yarn build:windows && electron-builder --win --x64 --publish=never",
    "eb:win:portable": "yarn build && electron-builder --win portable --x64 --publish=never",
    "eb:win:msix": "yarn clean && yarn build && electron-builder --win msix --x64 --publish=never",
    "eb:win:appx": "yarn clean && yarn build && electron-builder --win appx --x64 --publish=never",
    "publish": "electron-forge publish",
    "start2": "electron-forge start",
    "clean": "shx rm -rf dist dist-installer out"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@mui/x-data-grid": "^8.11.3",
    "@mui/x-date-pickers": "^8.11.1",
    "@reduxjs/toolkit": "^2.8.2",
    "axios": "^1.11.0",
    "dayjs": "^1.11.18",
    "escpos": "^3.0.0-alpha.6",
    "node-printer": "^1.0.4",
    "node-thermal-printer": "^4.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-phone-number-input": "^3.4.12",
    "react-redux": "^9.2.0",
    "swr": "^2.3.6",
    "usb": "^2.16.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "shx": "^0.3.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": false,
        "ignore": [
          ".git",
          ".vscode",
          "out",
          "betzone-windows-build-package",
          "node_modules/electron",
          "CLICK_TO_",
          "\\.tar\\.gz$",
          "\\.zip$",
          "\\.dmg$",
          "\\.exe$",
          "\\.ps1$",
          "\\.bat$",
          "\\.sh$"
        ],
        "overwrite": true,
        "executableName": "Betzone",
        "appCopyright": "Copyright Â© 2025 Betzone",
        "appVersion": "1.0.16",
        "icon": "resources/ball.png",
        "extraResource": [
          "resources"
        ],
        "derefSymlinks": false,
        "prune": true,
        "win32metadata": {
          "CompanyName": "Betzone",
          "FileDescription": "Betzone Desktop Application",
          "OriginalFilename": "Betzone.exe",
          "ProductName": "Betzone",
          "InternalName": "Betzone"
        },
        "nativeRebuild": true
      },
      "hooks": {
        "prePackage": "echo 'Preparing package...'",
        "postPackage": "echo 'Package created successfully'"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-dmg",
          "platforms": [
            "darwin"
          ],
          "config": {
            "icon": "resources/ball.png"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "linux",
            "win32"
          ],
          "config": {
            "icon": "resources/ball.png"
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "platforms": [
            "win32"
          ],
          "config": {
            "icon": "resources/ball.png",
            "setupIcon": "resources/ball.png"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "platforms": [
            "linux"
          ],
          "config": {
            "icon": "resources/ball.png"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "platforms": [
            "linux"
          ],
          "config": {
            "icon": "resources/ball.png"
          }
        }
      ]
    }
  },
  "build": {
    "appId": "com.betzone.desktop",
    "productName": "betzone",
    "asar": false,
    "directories": {
      "output": "dist-installer"
    },
    "files": [
      "dist/**/*",
      "resources/**/*",
      "package.json",
      "!node_modules",
      "!src",
      "!renderer/src",
      "!main",
      "!*.md",
      "!*.tar.gz",
      "!*.zip",
      "!build-*",
      "!CLICK_TO_*",
      "!out",
      "!betzone-windows-*"
    ],
    "asarUnpack": [
      "resources/**/*",
      "dist/renderer/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/ball.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
