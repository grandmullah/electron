{
  "name": "betzone-electron",
  "version": "1.0.0",
  "description": "betzone desktop app",
  "main": "dist/main/index.js",
  "author": "grandmullah",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.main.json && vite build && cp -r renderer/*.html dist/renderer/ && cp -r renderer/styles dist/renderer/",
    "start": "yarn build && electron .",
    "dev": "vite build --watch & tsc -p tsconfig.main.json --watch & electron .",
    "watch": "tsc -p tsconfig.main.json --watch",
    "package": "electron-forge package",
    "premake": "yarn build",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "axios": "^1.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-phone-number-input": "^3.4.12",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "electron": "^37.2.4",
    "typescript": "^5.0.0",
    "vite": "^4.4.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true
      },
      "makers": [
        { "name": "@electron-forge/maker-dmg", "config": {}, "platforms": ["darwin"] },
        { "name": "@electron-forge/maker-zip", "config": {}, "platforms": ["darwin"] },
        { "name": "@electron-forge/maker-squirrel", "config": {}, "platforms": ["win32"] },
        { "name": "@electron-forge/maker-zip", "config": {}, "platforms": ["win32"] },
        { "name": "@electron-forge/maker-deb", "config": {}, "platforms": ["linux"] },
        { "name": "@electron-forge/maker-rpm", "config": {}, "platforms": ["linux"] }
      ]
    }
  }
}
